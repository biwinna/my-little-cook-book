<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Rozoviy"
    tools:context=".a">

    <Button
        android:id="@+id/plov1"
        android:layout_width="126dp"
        android:layout_height="55dp"
        android:background="@color/teal_700"
        android:backgroundTint="@color/purple_200"
        android:text="Назад"
        android:textColor="#FFFFFF"
        app:iconTint="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="TextContrastCheck" />

    <EditText
        android:id="@+id/secunda"
        android:layout_width="218dp"
        android:layout_height="48dp"
        android:layout_marginStart="97dp"
        android:layout_marginTop="504dp"
        android:layout_marginEnd="105dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:text="Сколько секунд ждать ?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/secunda1"
        android:layout_width="129dp"
        android:layout_height="50dp"
        android:layout_marginStart="142dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="95dp"
        android:text="Таймер"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="277dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Армянский плов с грибами"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="83dp"
        android:capitalize="none"
        android:selectAllOnFocus="false"
        android:text="Масло топленое или сливочное - 2 ст. ложки"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/secunda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="85dp"
        android:capitalize="none"
        android:selectAllOnFocus="false"
        android:text="Полба (крупа пшеничка) - 1 стакан"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="85dp"
        android:capitalize="none"
        android:selectAllOnFocus="false"
        android:text="Масло растительное - 2 ст. ложки"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="85dp"
        android:capitalize="none"
        android:selectAllOnFocus="false"
        android:text="Соль - по вкусу"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="85dp"
        android:capitalize="none"
        android:selectAllOnFocus="false"
        android:text="Вода (кипяток) - 2 стакана"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="85dp"
        android:capitalize="none"
        android:selectAllOnFocus="false"
        android:text="Лук репчатый - 1 шт."
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="85dp"
        android:capitalize="none"
        android:selectAllOnFocus="false"
        android:text="Шампиньоны - 250 г"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="304dp"
        android:layout_height="44dp"
        android:layout_marginStart="117dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="займёт 40 минут (1200 секунд готовка)"
        app:layout_constraintBottom_toTopOf="@+id/secunda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>